{
	"semi": false,
	"singleQuote": true,
	"useTabs": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"printWidth": 120,
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "avoid",
	"endOfLine": "lf",
	"vueIndentScriptAndStyle": true,
	"htmlWhitespaceSensitivity": "ignore",
	"embeddedLanguageFormatting": "auto",
	"plugins": ["prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.vue",
			"options": {
				"parser": "vue"
			}
		},
		{
			"files": "*.{json,jsonc}",
			"options": {
				"parser": "json",
				"trailingComma": "none"
			}
		},
		{
			"files": "*.md",
			"options": {
				"parser": "markdown",
				"printWidth": 100,
				"proseWrap": "always"
			}
		},
		{
			"files": "*.{css,scss,less}",
			"options": {
				"parser": "css",
				"singleQuote": false
			}
		}
	]
}
